{
  "jsxBracketSameLine": true,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "es5",
  "arrowParens": "always",
  "semi": true,
  "overrides": [
    {
      "files": "*.{js,jsx,tsx,ts}",
      "options": {
        "parser": "babel-ts"
      }
    },
    {
      "files": "*.{scss}",
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": "*.{html}",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    }
  ]
}
